<div class="nav">
  <h1>NOVO QUIZ</h1>
  <h2>Crie um agora!</h2>
</div>

<%= form_with(model: @quiz) do |f| %>
  <div class="container quiz-container">
    <h3>Qual o título do seu novo quiz?</h3>
    <%= f.text_field :title, placeholder: 'Título do quiz', class:'form-control', maxlength: 32 %>
    <%= f.label :title, "Insira o título do quiz" %>


    <fieldset>
      <legend>Insira as questões</legend>
      <%= f.fields_for :questions do |question_form| %>
        <%= render "question_fields", f: question_form %>
      <% end %>

      <%= link_to_add_fields "Adicionar questão", f, :questions %>
    </fieldset>

    <%= f.submit class: 'btn btn-primary' %>
</div>

<% end %>

